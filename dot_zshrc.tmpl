# zmienne

export EDITOR="vim"
export PATH=$PATH:$HOME/.local/bin:$HOME/bin

# autoupdate
if [[ $- == *i* ]]; then
	CHEZ_LAST_UPDATE_FILE="$HOME/.cache/chezmoi_last_update"
	CHEZ_COOLDOWN=604800  # 7 tagoj

	[[ -f "$CHEZ_LAST_UPDATE_FILE" ]] || echo 0 > "$CHEZ_LAST_UPDATE_FILE"

	LAST_UPDATE=$(<"$CHEZ_LAST_UPDATE_FILE")
	NOW=$(date +%s)

	if (( NOW - LAST_UPDATE > CHEZ_COOLDOWN )); then
		echo "[chezmoi] Semajno pasis – mi kontrolas…"
		if chezmoi update; then
			date +%s > "$CHEZ_LAST_UPDATE_FILE"
		else
			echo "[chezmoi] Ĝisdatigo fiaskis."
		fi
	fi
fi

# thefuck
eval "$(thefuck --alias fek)"

# ruby
{{ if eq .chezmoi.os "darwin" }}
	export PATH="/usr/local/opt/ruby/bin:$PATH"
	export LDFLAGS="-L/usr/local/opt/ruby/lib"
	export CPPFLAGS="-I/usr/local/opt/ruby/include"
	export PKG_CONFIG_PATH="/usr/local/opt/ruby/lib/pkgconfig"
{{ end }}
export PATH=$PATH:$(ruby -e "puts Gem.user_dir")/bin
export GEM_HOME=$(ruby -e 'puts Gem.user_dir')

# LSD
if type lsd >/dev/null; then
	alias ls='lsd'
	alias l='ls -l'
	alias la='ls -a'
	alias lla='ls -la'
	alias lt='ls --tree'
else
	echo "lsd mankas" >&2
fi

# bat (akk batcat)
if type bat >/dev/null; then
	alias cat='bat'
elif type batcat >/dev/null; then
		alias cat='batcat'
else
	echo "bat mankas" >&2
fi

# Node.js
PATH="$HOME/.local/bin:$PATH"
export npm_config_prefix="$HOME/.local"

# Angular
# Load Angular CLI autocompletion.
if type ng >/dev/null; then
	source <(ng completion script)
fi

if type pnpm >/dev/null; then
	export PNPM_HOME="/home/damjes/.local/share/pnpm"
	case ":$PATH:" in
	  *":$PNPM_HOME:"*) ;;
	  *) export PATH="$PNPM_HOME:$PATH" ;;
	esac
fi

